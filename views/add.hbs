<form method="POST" action="/">
  <div class="field">
    <label>Firstname</label>
    <input name="firstName" type="text">
  </div>
  <div class="field">
    <label>Lastname</label>
    <input name="lastName" type="text">
  </div class="field">
  <div class="field">
    <label>Email</label>
    <input name="email" type="email">
  </div class="field">
  <div class="commands">
